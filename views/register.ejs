<!DOCTYPE html>
<html lang="en">
<head>
  <title>RevTo Register</title>
  <%- include('./includes/dependencies.ejs') %> 
</head>
<body>
  <div class="container-fluid">
    <div class="row" style="margin: 200px;">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="row">
          <div class="col" style="text-align: center;">
            <h1>Register RevTo</h1>
            <form action="/register" method="POST">
              <label for="firstname">First Name</label><br>
              <input type="text" name="firstname" id="firstname" placeholder="Required" required><br>
              <br>
              <label for="last_name">Last Name</label><br>
              <input type="text" name="lastname" id="lastname" placeholder="Optional"><br>
              <br>
              <label for="username">Username</label><br>
              <input type="text" name="username" id="username" placeholder="Required" required><br>
              <br>
              <label for="email">Email</label><br>
              <input type="text" name="email" id="email" placeholder="Required" required><br>
              <br>
              <label for="password">Password</label><br>
              <input type="text" name="password" id="password" placeholder="Required" required><br>
              <br>
              <input type="submit" value="Register"><br>
              <br>
            </form>
          </div>
        </div>
        <div class="row" style="text-align: center;">
          <div class="col" style="text-align: center;">
            <p><a href="/login">go back</a></p>
          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <footer>
    <%- include('./includes/scripts.ejs') %> 
  </footer>
</body>
</html>