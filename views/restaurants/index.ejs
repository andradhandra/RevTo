<!DOCTYPE html>
<html lang="en">
<head>
  <title>RevTo Restaurants</title>
  <%- include('../includes/dependencies.ejs') %> 
</head>
<body>
  <header>
    <%- include('../includes/navbar.ejs') %> 
  </header>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h3>Restaurant review</h3>
        <table class="table table-striped">
          <tbody>
            <% restaurants.forEach(resto => { %>
              <tr>
                <th scope="row" style="vertical-align: middle;"><%= resto.id %></th>
                <td style="vertical-align: middle;"><img src="<%= resto.picture %>" alt="picture" width="120px" height="100px"></td>
                <th style="vertical-align: middle;"><a href="/restaurants/<%= resto.id %>/reviews"><%= resto.name %></a></th>
              </tr>
            <% }) %> 
          </tbody>
        </table>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <footer>
    <%- include('../includes/scripts.ejs') %> 
    
  </footer>
</body>
</html>