<!DOCTYPE html>
<html lang="en">
<head>
  <title>RevTo User</title>
  <%- include('../includes/dependencies.ejs') %> 
</head>
<body>
  <header>
    <%- include('../includes/navbarUser.ejs') %> 
  </header>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6" style="text-align: center;">
        <h3>Review Resto!</h3>
        <!-- sementara id 1 dulu. kalo udah bikin session baru gantu jd user.id -->
        <form action="/users/<%= UserId %> /<%= resto.id %>/writeReview" method="POST">
          <h5><%= resto.name %> </h5>
          <img src="<%= resto.picture %>" alt="restoPic" width="50%"><br>
          <br>
          <label>Address: <Address><%= resto.address %> </Address></label><br>
          <br>
          <label for="review">Your review:</label><br>
          <textarea style="width: 100%; height: 100px;" name="review" maxlength="255"></textarea><br>
          <br>
          <label for="verdict">Verdict: </label>
          <input type="radio" name="verdict" id="verdict" value="0"> Bad
          <input type="radio" name="verdict" id="verdict" value="1"> Recomended <br>
          <br>
          <input type="submit" value="Submit review"><br>
          <br>
        </form>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <footer>
    <%- include('../includes/scripts.ejs') %> 
    
  </footer>
</body>
</html>