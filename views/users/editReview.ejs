<!DOCTYPE html>
<html lang="en">
<head>
  <title>RevTo User</title>
  <%- include('../includes/dependencies.ejs') %> 
</head>
<body>
  <header>
    <%- include('../includes/navbarUser.ejs') %> 
  </header>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6" style="text-align: center;">
        <h3>Review Resto!</h3>
        <form action="/users/<%= UserId %> /reviews/<%= review.id %> /editReview" method="POST">
          <h5><%= review.Restaurant.name %> </h5>
          <input type="text" name="RestaurantId" value="<%= review.Restaurant.id %>" hidden>
          <img src="<%= review.Restaurant.picture %>" alt="restoPic" width="50%"><br>
          <br>
          <label>Address: <Address><%= review.Restaurant.address %> </Address></label><br>
          <br>
          <label for="review">Your review:</label><br>
          <textarea style="width: 100%; height: 100px;" name="review" maxlength="255" required><%= review.review %> </textarea><br>
          <br>
          <label for="verdict">Verdict: </label>
          <% if (review.verdict == 0) { %>
            <input type="radio" name="verdict" id="verdict" value="0" checked> Bad
            <input type="radio" name="verdict" id="verdict" value="1"> Recomended <br>
          <% } else { %>
            <input type="radio" name="verdict" id="verdict" value="0"> Bad
            <input type="radio" name="verdict" id="verdict" value="1" checked> Recomended <br>
          <% } %> 
          <br>
          <input type="submit" value="Submit review"><br>
          <br>
        </form>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <footer>
    <%- include('../includes/scripts.ejs') %> 
    
  </footer>
</body>
</html>